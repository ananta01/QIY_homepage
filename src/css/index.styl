.my-tv
  margin-bottom: 28px
  .mod-header-text
    margin-left: 0
  .mod-img-box-img
    width: 210px
    height: 118px
  .small-box-desc-text
    height:auto
    white-space normal
    color: #222
    cursor pointer
    &:hover
      color green2
    a
      color green2

