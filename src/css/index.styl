.rec, .cartoon
  margin-bottom: 50px
  .mod-img-box-img
    width: 210px
    height: 118px
  .mod-header-icon
    background-position: -120px 0
    
// 娱乐 end

// 电影 start
.mod-list-side
  position: relative

.movie, .teleplay
  margin-bottom: 50px
  .mod-img-box-img
    width: 210px
    height: 280px
  .mod-img-box-desc
    position: relative
    p
      padding-right: 30px
  .desc-grade
    display inline-block
    position: absolute
    top: 5px
    right: 10px
