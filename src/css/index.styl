// 帮助平台 start
.platform-list-wrap
  padding: 10px 0
  margin-bottom: 40px
.platform-list
  background-color: #f8f8f8
  .platform-item
    width: 210px
    height: 100px
    padding: 20px 0
    font-size: 16px
  a
    display block
    text-align: center
    em
      display inline-block
      width: 16px
      height: 16px
      background url("../images/sprite-ptEntry-icons@2x.png") -562px 0 no-repeat
      background-size 580px 70px
      vertical-align: -2px
      margin-left: 5px
  .platform-icon
    display inline-block
    width: 68px
    height: 68px
    background url("../images/sprite-ptEntry-icons@2x.png") no-repeat
    background-size 580px 70px
    &.icon-1
      background-position: 0 0
    &.icon-2
      background-position: -70px 0
    &.icon-3
      background-position: -140px 0
    &.icon-4
      background-position: -210px 0
    &.icon-5
      background-position: -280px 0
    &.icon-6
      background-position: -350px 0
    &.icon-7
      background-position: -420px 0
    &.icon-8
      background-position: -490px 0
  .platform-title
    text-align: center
    margin-left: 20px

  li:hover
    background #fff
    box-shadow 0 0 6px #dddddd
    transform scale(1.05)
    a
      color green2



// 帮助平台 end


// 页脚 start
#footer
  background #f8f8f8
  padding: 20px 0 70px
  font-size: 0
  .footer-content
    padding-bottom: 30px
    border-bottom: 1px solid #ececec
  dl
    display inline-block
    font-size: 15px
    vertical-align: top
    width: 16.6666%
    color: #222
  dt
    font-size: 22px
    line-height: 32px
    padding-right: 20px
    margin-bottom: 10px
  dd
    line-height: 35px
    padding-right: 20px
    overflow: hidden
    text-overflow ellipsis
    white-space nowrap
    cursor pointer
    &:hover
      color green2

  .copyright
    margin-top: 20px
    text-align: center
    font-size: 16px
    color #999



// 页脚 end


// 放回顶部 start

.scroll-home
  position: fixed
  bottom: 30px
  right: 30px

  li
    margin-top: 10px
    &:hover
      a
        border-radius 0 50% 50% 0
        background #e0f7e2
        box-shadow none
      i
        color green2
      span
        max-width 200px
        padding-left: 17px
        color green2

  a
    position: relative
    display inline-block
    width: 36px
    height: 36px
    line-height: 36px
    text-align: center
    border-radius 50%
    background #fff
    box-shadow 0 0 5px 0 rgba(2,2,2,.2);
  span
    position: absolute
    top: 0
    right: 35px
    display inline-block
    max-width: 0
    overflow: hidden
    white-space nowrap
    background #e0f7e2
    border-radius 18px 0 0 18px
  i
    display inline-block
    font-size: 18px
    color: #999
    font-weight: 700
  .scroll-sign i
    font-size: 26px

// 放回顶部 end


